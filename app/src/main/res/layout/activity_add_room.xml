<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/add_room_linlay_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <ImageView
            android:id="@+id/add_room_iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:adjustViewBounds="true"
            android:maxWidth="175dp"
            android:layout_gravity="center_horizontal"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:src="@drawable/billy_logo" />

        <TextView
            android:id="@+id/add_room_tv_header_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deine KontostÃ¤nde:"
            android:paddingStart="5dp"
            android:background="@color/dark_grey"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/add_room_tv_header_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Los Geht's!"
            android:paddingStart="5dp"
            android:layout_marginTop="10dp"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/add_room_tv_header_3"
            android:layout_width="match_parent"
            android:textSize="28sp"
            android:paddingStart="5dp"
            android:layout_height="wrap_content"
            android:text="KOSTENSTALL BEITRETEN"
            android:textColor="@color/yellow"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/add_room_tv_enter_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:paddingStart="5dp"
            android:text="Wer lud dich ein?" />

        <EditText
            android:id="@+id/add_room_et_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="5dp"
            android:paddingStart="10dp"
            android:textColorHint="@color/light_grey"
            android:background="@color/yellow"
            android:hint="Einladungscode (optional)"/>

        <TextView
            android:id="@+id/add_room_tv_name_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:layout_marginTop="25dp"
            android:text="Um welchen Kostenstall geht's?" />

        <EditText
            android:id="@+id/add_room_et_name_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:paddingStart="10dp"
            android:layout_marginTop="5dp"
            android:textColorHint="@color/light_grey"
            android:background="@color/yellow"
            android:hint="Name des Kostenstalls" />

        <LinearLayout
            android:id="@+id/add_room_linlay_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add_room_btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/yellow"
                android:text="Abbrechen" />

            <Button
                android:id="@+id/add_room_btn_submit"
                android:layout_width="0dp"
                android:layout_marginHorizontal="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:backgroundTint="@color/yellow"
                android:text="Absenden" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_room_linlay_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <LinearLayout
            android:id="@+id/add_room_linlay_nav_top"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/startscreen_btn_nav_services"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="Leistungen"
                android:textColor="@android:color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/startscreen_btn_nav_faq"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="FA''KUH''"
                android:textColor="@android:color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/startscreen_btn_nav_contact"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="Kontakt"
                android:textColor="@android:color/black"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_room_linlay_nav_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/startscreen_btn_nav_datasecurity"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="Datenschutz"
                android:textColor="@android:color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/startscreen_btn_nav_impress"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="Impressum"
                android:textColor="@android:color/black"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>